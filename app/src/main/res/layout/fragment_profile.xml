<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/txtProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_extrabold"
        android:textColor="@color/white"
        android:text="Profile"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_person_pin_24" />

    <TextView
        android:id="@+id/txtNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ibanez Centivolia Ahista"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/txtNoRek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Nomor Rekening"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold" />

    <TextView
        android:id="@+id/txtNomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="1234-5678-9000"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Email"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold" />

    <TextView
        android:id="@+id/txtEmail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="ibanezcentivoliaahista@mail.ugm.ac.id"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Password"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold" />

    <TextView
        android:id="@+id/txtPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="***************"
        android:layout_marginTop="3dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:textColor="#fc7b03"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Logout" />

</LinearLayout>
